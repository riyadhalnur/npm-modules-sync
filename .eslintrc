{
  "extends": [
    "plugin:prettier/recommended",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true
    }]
  },
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "should": true
  },
  "plugins": [
    "prettier",
    "flowtype"
  ]
}
